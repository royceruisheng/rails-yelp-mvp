<div class="container">
  <h1>Create a new restaurant listing</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Return to view all restaurants", restaurants_path %>
</div>
